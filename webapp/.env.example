# BioAgent Web Application Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!

# ==================== REQUIRED ====================

# Anthropic API Key (required for agent functionality)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==================== DATABASE ====================

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=bioagent
DB_PASSWORD=bioagent_password
DB_NAME=bioagent

# Or use a full connection string (overrides individual settings)
# DATABASE_URL=postgresql+asyncpg://bioagent:bioagent_password@localhost:5432/bioagent

# Enable SQL query logging (development only)
DB_ECHO=false

# ==================== REDIS ====================

# Redis for task queue and caching
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# ==================== OBJECT STORAGE (MinIO) ====================

# MinIO S3-compatible storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=bioagent
MINIO_SECRET_KEY=bioagent_secret_key
MINIO_BUCKET=bioagent-files
MINIO_USE_SSL=false
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ==================== APPLICATION ====================

# Environment: development or production
ENVIRONMENT=development

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# File upload limits
MAX_FILE_SIZE_MB=500

# API ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# ==================== AUTHENTICATION (Optional) ====================

# Clerk authentication (optional - for multi-user setup)
# Get your keys from: https://clerk.com/
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=

# API key for external access (optional)
API_KEY_REQUIRED=false
API_KEY=

# ==================== SECURITY ====================

# JWT Secret (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-generate-with-openssl

# ==================== EXTERNAL APIS (Optional) ====================

# NCBI API key for faster database access
NCBI_API_KEY=

# Ensembl API key
ENSEMBL_API_KEY=

# UniProt API key
UNIPROT_API_KEY=

# ==================== MONITORING (Optional) ====================

# Sentry DSN for error tracking
SENTRY_DSN=

# ==================== PRODUCTION SETTINGS ====================

# Uncomment and configure for production deployment:

# DATABASE_URL=postgresql+asyncpg://user:password@prod-db:5432/bioagent
# REDIS_URL=redis://prod-redis:6379/0
# MINIO_ENDPOINT=your-s3-bucket.amazonaws.com
# MINIO_USE_SSL=true
# ENVIRONMENT=production
# ALLOWED_ORIGINS=https://your-domain.com
# SECRET_KEY=your-production-secret-key
